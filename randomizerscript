-- Full script with the following behavior:
-- ‚úÖ "üé≤ Randomize Pets" button: 10s cooldown with countdown display
-- ‚úÖ "üîÑ Auto Randomizer" button: 20s countdown BEFORE activating auto-randomize, with live display
-- ‚úÖ Auto Randomizer spins continuously after the 20s delay, and stops if a rare pet is found

local players = game:GetService("Players")
local collectionService = game:GetService("CollectionService")
local runService = game:GetService("RunService")

local localPlayer = players.LocalPlayer or players:GetPlayers()[1]

local eggChances = {
    ["Common Egg"] = {Dog = 33, Bunny = 33, ["Golden Lab"] = 33},
    ["Uncommon Egg"] = {Cat = 25, Deer = 25, Chicken = 25, ["Black Bunny"] = 25},
    ["Rare Egg"] = {["Orange Tabby"] = 33.33, ["Spotted Deer"] = 25, Pig = 16.67, Rooster = 16.67, Monkey = 8.33},
    ["Legendary Egg"] = {Cow = 42.55, ["Silver Monkey"] = 42.55, ["Sea Otter"] = 10.64, Turtle = 2.13, ["Polar Bear"] = 2.13},
    ["Mythic Egg"] = {["Grey Mouse"] = 37.5, ["Brown Mouse"] = 26.79, Squirrel = 26.79, ["Red Giant Ant"] = 8.93, ["Red Fox"] = 0},
    ["Bug Egg"] = {Snail = 40, ["Giant Ant"] = 35, Caterpillar = 25, ["Praying Mantis"] = 0, ["Dragon Fly"] = 0},
    ["Night Egg"] = {Hedgehog = 47, Mole = 23.5, Frog = 21.16, ["Echo Frog"] = 8.35, ["Night Owl"] = 0, Raccoon = 0},
    ["Bee Egg"] = {Bee = 65, ["Honey Bee"] = 20, ["Bear Bee"] = 10, ["Petal Bee"] = 5, ["Queen Bee"] = 0},
    ["Anti Bee Egg"] = {Wasp = 55, ["Tarantula Hawk"] = 31, Moth = 14, Butterfly = 0, ["Disco Bee"] = 0},
    ["Common Summer Egg"] = {Starfish = 50, Seafull = 25, Crab = 25},
    ["Rare Summer Egg"] = {Flamingo = 30, Toucan = 25, ["Sea Turtle"] = 20, Orangutan = 15, Seal = 10},
    ["Paradise Egg"] = {Ostrich = 43, Peacock = 33, Capybara = 24, ["Scarlet Macaw"] = 3, ["Mimic Octopus"] = 1},
    ["Premium Night Egg"] = {Hedgehog = 50, Mole = 26, Frog = 14, ["Echo Frog"] = 10},
    ["Dinosaur Egg"] = {Raptor = 33, Triceratops = 33, ["T-Rex"] = 1, Stegosaurus = 33, Pterodactyl = 33, Brontosaurus = 33},
    ["Zen Egg"] = {["Shiba Inu"] = 40, Nihonzaru = 31, Kitsune = 0.08, Tanuki = 20.82, Tanchozuru = 4.6, Kappa = 3.5}
}

local realESP = {
    ["Common Egg"] = true, ["Uncommon Egg"] = true, ["Rare Egg"] = true,
    ["Common Summer Egg"] = true, ["Rare Summer Egg"] = true
}

local stopPets = {
    Raccoon = true, ["Dragon Fly"] = true, ["Queen Bee"] = true,
    Kitsune = true, ["Disco Bee"] = true, Butterfly = true
}

local displayedEggs = {}
local autoStopOn = true
local autoRandomizerOn = false
local canToggleAuto = true
local canReroll = true

local function shouldAutoStop(petName)
    return stopPets[petName] or false
end

local function weightedRandom(options)
    local valid, total = {}, 0
    for pet, chance in pairs(options) do
        if chance > 0 then
            table.insert(valid, {pet = pet, chance = chance})
            total += chance
        end
    end
    local roll, cumulative = math.random() * total, 0
    for _, v in ipairs(valid) do
        cumulative += v.chance
        if roll <= cumulative then return v.pet end
    end
end

local function getNonRepeatingRandomPet(eggName, lastPet)
    local pool = eggChances[eggName] or {}
    for _ = 1, 5 do
        local pet = weightedRandom(pool)
        if pet and (pet ~= lastPet or math.random() < 0.3) then
            return pet
        end
    end
    return lastPet
end

local function createEspGui(object, text)
    local gui = Instance.new("BillboardGui")
    gui.Name = "FakePetESP"
    gui.Adornee = object:FindFirstChildWhichIsA("BasePart") or object.PrimaryPart or object
    gui.Size = UDim2.new(0, 200, 0, 50)
    gui.StudsOffset = Vector3.new(0, 2.5, 0)
    gui.AlwaysOnTop = true

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextStrokeTransparency = 0
    label.TextScaled = true
    label.Font = Enum.Font.SourceSansBold
    label.Text = text
    label.Parent = gui

    gui.Parent = object
    return gui
end

local function addESP(egg)
    if egg:GetAttribute("OWNER") ~= localPlayer.Name then return end
    local eggName = egg:GetAttribute("EggName")
    local objectId = egg:GetAttribute("OBJECT_UUID")
    if not eggName or not objectId or displayedEggs[objectId] then return end

    local firstPet = realESP[eggName] and nil or getNonRepeatingRandomPet(eggName)
    local text = realESP[eggName] and eggName or eggName .. " | " .. (firstPet or "?")

    local gui = createEspGui(egg, text)
    displayedEggs[objectId] = {
        egg = egg,
        gui = gui,
        label = gui:FindFirstChild("TextLabel"),
        eggName = eggName,
        lastPet = firstPet
    }
end

local function removeESP(egg)
    local objectId = egg:GetAttribute("OBJECT_UUID")
    if displayedEggs[objectId] then
        displayedEggs[objectId].gui:Destroy()
        displayedEggs[objectId] = nil
    end
end

for _, egg in collectionService:GetTagged("PetEggServer") do addESP(egg) end
collectionService:GetInstanceAddedSignal("PetEggServer"):Connect(addESP)
collectionService:GetInstanceRemovedSignal("PetEggServer"):Connect(removeESP)

local gui = Instance.new("ScreenGui", localPlayer:WaitForChild("PlayerGui"))
gui.Name = "RandomizerGUI"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 300, 0, 190)
frame.Position = UDim2.new(0, 10, 1, -200)
frame.BackgroundColor3 = Color3.fromRGB(106, 190, 48)
frame.BorderColor3 = Color3.fromRGB(45, 90, 20)
frame.BorderSizePixel = 4

local timerLabel = Instance.new("TextLabel", frame)
timerLabel.Size = UDim2.new(0, 200, 0, 30)
timerLabel.Position = UDim2.new(0, 10, 0, 145)
timerLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
timerLabel.TextColor3 = Color3.new(1, 1, 1)
timerLabel.Text = "Next Auto: OFF"
timerLabel.TextScaled = true
timerLabel.Font = Enum.Font.SourceSansBold

-- BUTTONS --
local stopBtn = Instance.new("TextButton", frame)
stopBtn.Size = UDim2.new(0, 200, 0, 35)
stopBtn.Position = UDim2.new(0, 10, 0, 10)
stopBtn.BackgroundColor3 = Color3.fromRGB(160, 110, 60)
stopBtn.TextColor3 = Color3.new(1, 1, 1)
stopBtn.Text = "üçÄAuto Stop: ON"
stopBtn.TextScaled = true
stopBtn.MouseButton1Click:Connect(function()
    autoStopOn = not autoStopOn
    stopBtn.Text = autoStopOn and "üçÄAuto Stop: ON" or "Auto Stop: OFF"
end)

local autoBtn = Instance.new("TextButton", frame)
autoBtn.Size = UDim2.new(0, 200, 0, 35)
autoBtn.Position = UDim2.new(0, 10, 0, 100)
autoBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
autoBtn.TextColor3 = Color3.new(1, 1, 1)
autoBtn.Text = "üîÑAuto Randomizer: OFF"
autoBtn.TextScaled = true
autoBtn.MouseButton1Click:Connect(function()
    if not canToggleAuto or autoRandomizerOn then
        autoRandomizerOn = false
        autoBtn.Text = "üîÑAuto Randomizer: OFF"
        return
    end
    canToggleAuto = false
    local countdown = 20
    task.spawn(function()
        while countdown > 0 do
            autoBtn.Text = "‚è≥ Starting in " .. countdown .. "s"
            countdown -= 1
            task.wait(1)
        end
        autoRandomizerOn = true
        autoBtn.Text = "üîÑAuto Randomizer: ON"
        task.delay(20, function()
            canToggleAuto = true
        end)
    end)
end)

local rerollBtn = Instance.new("TextButton", frame)
rerollBtn.Size = UDim2.new(0, 200, 0, 35)
rerollBtn.Position = UDim2.new(0, 10, 0, 55)
rerollBtn.BackgroundColor3 = Color3.fromRGB(120, 120, 120)
rerollBtn.TextColor3 = Color3.new(1, 1, 1)
rerollBtn.Text = "üé≤Randomize Pets"
rerollBtn.TextScaled = true
rerollBtn.MouseButton1Click:Connect(function()
    if not canReroll then return end
    canReroll = false
    local countdown = 10
    task.spawn(function()
        while countdown > 0 do
            rerollBtn.Text = "‚è≥ " .. countdown .. "s..."
            countdown -= 1
            task.wait(1)
        end
        canReroll = true
        rerollBtn.Text = "üé≤Randomize Pets"
    end)
    for _, data in pairs(displayedEggs) do
        local pet = getNonRepeatingRandomPet(data.eggName, data.lastPet)
        if pet and data.label then
            data.label.Text = data.eggName .. " | " .. pet
            data.lastPet = pet
        end
    end
end)

-- Auto Randomizer Loop
runService.Heartbeat:Connect(function()
    if autoRandomizerOn then
        for _, data in pairs(displayedEggs) do
            local pet = getNonRepeatingRandomPet(data.eggName, data.lastPet)
            if pet and data.label then
                data.label.Text = data.eggName .. " | " .. pet
                data.lastPet = pet
            end
            if autoStopOn and shouldAutoStop(pet) then
                autoRandomizerOn = false
                timerLabel.Text = "Auto stopped: Found " .. pet
                return
            end
        end
        timerLabel.Text = "Auto Randomizing..."
    else
        timerLabel.Text = "Next Auto: OFF"
    end
end)
